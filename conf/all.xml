<?xml version="1.0"?>
<global>
	<thread_num>1</thread_num>
	<log4cplus_conf>log4cplus_debug.properties</log4cplus_conf>
</global>

<mqtt_server>
	<ip>0.0.0.0</ip>
	<port>5060</port>
	<db_file_name>dup.db</db_file_name>
	<db_flush_interval>30</db_flush_interval>
	<max_idle_timeout>300</max_idle_timeout>
	<data_dir>./<data_dir>
</mqtt_server>

<mqtt_bridge>3</mqtt_bridge>  <!-- bridge will ingore parent server -->

<parent_mqtt_server>
	<ip>10.1.16.130</ip>
	<port>1883</port>
	<user_name>diwh</user_name>
	<topic_name>topic_name</topic_name>
	<keep_alive>60</keep_alive>
</parent_mqtt_server>

<http_server>
    <ip>0.0.0.0</ip>
    <port>8080</port>
</http_server>

