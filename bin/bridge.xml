<?xml version="1.0"?>
<global>
	<thread_num>1</thread_num>
	<log4cplus_conf>log4cplus_debug.properties</log4cplus_conf>
</global>

<mqtt_server>
	<ip>0.0.0.0</ip>
	<port>5070</port>
	<db_file_name>brg_dup.db</db_file_name>
	<db_flush_interval>30</db_flush_interval>
	<max_idle_timeout>300</max_idle_timeout>
</mqtt_server>

<mqtt_bridge>1</mqtt_bridge>  <!-- bridge will ingore parent server -->

<http_server>  <!-- bridge -->  
    <ip>0.0.0.0</ip>
    <port>8080</port>
</http_server>

